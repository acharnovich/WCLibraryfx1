<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane fx:id="navUI" prefHeight="444.0" prefWidth="794.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.NavigationCtrl">
   <children>
      <BorderPane fx:id="navBorder" layoutX="2.0" prefHeight="50.0" prefWidth="805.0">
         <top>
            <ToolBar fx:id="menuBar" prefHeight="50.0" prefWidth="897.0" BorderPane.alignment="CENTER">
              <items>
                <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#handleSearchClick" text="Search" />
                  <Button fx:id="addItemBtn" mnemonicParsing="false" onAction="#handleAddItem" text="Add Item" />
                  <Button fx:id="removeItemBtn" mnemonicParsing="false" onAction="#handleRemoveItemClick" text="Remove Item" />
                  <Button fx:id="newAccountBtn" mnemonicParsing="false" onAction="#handleCreateAccount" text="New Account" />
                  <Button fx:id="checkoutBtn" mnemonicParsing="false" onAction="#handleCheckoutClick" text="Check Out" />
                  <Button fx:id="checkinBtn" mnemonicParsing="false" onAction="#handleCheckInClick" text="Check In" />
                  <Button fx:id="payBillBtn" mnemonicParsing="false" onAction="#handlePayBillsClick" text="Pay Bill" visible="false" />
                  <Button fx:id="addBillBtn" disable="true" mnemonicParsing="false" text="Add Bill" visible="false" />
                  <ButtonBar fx:id="logoutBar" prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                      <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#logout" text="Logout" textFill="#ee0202" />
                    </buttons>
                  </ButtonBar>
              </items>
            </ToolBar>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
